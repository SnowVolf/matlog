<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/main_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include android:id="@+id/toolbar" layout="@layout/toolbar_stub" />
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            
            <android.support.v7.widget.RecyclerView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:dividerHeight="0dp"
                android:paddingBottom="2dp"
                android:paddingTop="1dp"
                android:layout_above="@+id/bottomNavigationView" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="?toolbarShadow" />
            <android.support.design.widget.BottomNavigationView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?colorPrimary"
                android:layout_alignParentBottom="true"
                android:id="@+id/bottomNavigationView">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical">
                    <ImageButton
                        android:id="@+id/btn_expand_collapse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_expand_more_white_24dp"
                        android:layout_weight="1"
                        android:background="?selectableItemBackgroundBorderless"/>
                    <ImageButton
                        android:id="@+id/btn_start_pause"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_pause_white_24dp"
                        android:layout_weight="1"
                        android:background="?selectableItemBackgroundBorderless"/>
                    <ImageButton
                        android:id="@+id/btn_record_stop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_stop_white_24dp"
                        android:layout_weight="1"
                        android:background="?selectableItemBackgroundBorderless"/>
                    <ImageButton
                        android:id="@+id/btn_clear_log"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_clear"
                        android:layout_weight="1"
                        android:background="?selectableItemBackgroundBorderless"/>
                    <ImageButton
                        android:id="@+id/btn_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_menu"
                        android:layout_weight="1"
                        android:background="?selectableItemBackgroundBorderless"/>
                </LinearLayout>
            </android.support.design.widget.BottomNavigationView>
        </RelativeLayout>
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>
</layout>